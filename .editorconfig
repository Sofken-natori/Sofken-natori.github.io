root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[*.md]
indent_size = 2
tab_width = 2
trim_trailing_whitespace = false

[*.nix]
indent_size = 2
tab_width = 2

[*.{diff,patch}]
trim_trailing_whitespace = false

[{*.{yaml,yml},.yamllint}]
indent_size = 2
tab_width = 2
